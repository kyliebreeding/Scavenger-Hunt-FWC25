  <script>
    // === BASIC SETTINGS ===
    const ANSWER = "8314335"; // 7-digit code

    const boxes = Array.from(document.querySelectorAll('input.codebox'));
    const error = document.getElementById('error');
    const part1 = document.getElementById('part1');
    const part2 = document.getElementById('part2');

    // Auto-focus first box on load
    boxes[0].focus();

    // Move focus forward/back, validate on each change
    boxes.forEach((box, idx) => {
      box.addEventListener('input', () => {
        box.value = (box.value || '').replace(/\D/g, ''); // numeric only
        if (box.value && idx < boxes.length - 1) boxes[idx + 1].focus();
        check();
      });
      box.addEventListener('keydown', (e) => {
        if (e.key === 'Backspace' && !box.value && idx > 0) boxes[idx - 1].focus();
      });
      box.addEventListener('paste', (e) => {
        const text = (e.clipboardData || window.clipboardData).getData('text');
        if (!text) return;
        e.preventDefault();
        const digits = text.replace(/\D/g, '').slice(0, boxes.length);
        for (let i = 0; i < digits.length; i++) {
          boxes[i].value = digits[i];
        }
        if (digits.length > 0 && digits.length < boxes.length) boxes[digits.length].focus();
        check();
      });
    });

    function check(){
      const attempt = boxes.map(b => (b.value || '')).join('');
      error.style.display = 'none';
      if (attempt.length === ANSWER.length) {
        if (attempt === ANSWER) {
          goToPart2();
        } else {
          error.style.display = 'block';
        }
      }
    }

    function goToPart2(){
      part1.style.display = 'none';
      part2.style.display = 'block';
      // Optionally scroll into view on small screens
      setTimeout(()=>part2.scrollIntoView({behavior:'smooth'}), 50);
    }
  </script>
</body>
