        <input class="codebox" inputmode="numeric" pattern="[0-9]*" maxlength="1" />
        <input class="codebox" inputmode="numeric" pattern="[0-9]*" maxlength="1" />
        <input class="codebox" inputmode="numeric" pattern="[0-9]*" maxlength="1" />
      </div>
      <div id="error">Wrong code, try again!</div>
    </section>

    <section id="part2">
      <h2>Nice work! Here's your next clue:</h2>
      <!-- Save the bench photo next to this file as bench.jpg, or change the src below -->
      <img src="bench.jpg" alt="Clue image" id="clueImage" />
